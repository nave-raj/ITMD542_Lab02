extends layout 

block content 
    h1 All Available Contacts
    div
        a(href='/contacts/create-contact') Create a New Contact
    br
    table
      thead
        tr
          th First Name
          th Last Name
          th Email Address
          th Actions
      tbody
        each contact in contacts
          tr
            td #{contact.firstName}
            td #{contact.lastName}
            td #{contact.email}
            td
              a(href=`/contacts/${contact.id}`) View